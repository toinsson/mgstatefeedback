<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context="toinsson.mgstatefeedback.MainActivity"
    tools:deviceIds="wear">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <TextView
            android:id="@+id/sensor_1"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:text="@string/sensor_1"
            app:layout_box="all"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/clock"
            android:layout_weight="0.54"
            android:background="#ff1234"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.Wearable.Large" />

        <TextView
            android:id="@+id/sensor_2"
            android:layout_width="match_parent"
            android:text="@string/sensor_2"
            app:layout_box="all"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/clock"
            android:layout_weight="0.46"
            android:layout_height="fill_parent"
            android:background="#ff4321"
            android:gravity="center_vertical|center"
            android:textAppearance="@style/TextAppearance.Wearable.Large" />
    </LinearLayout>

    <TextView
        android:id="@+id/clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:textColor="@android:color/white"
        app:layout_box="all"
        android:layout_alignParentStart="true" />

</RelativeLayout>
